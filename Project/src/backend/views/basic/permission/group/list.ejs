<%-contentFor('js')%>
<script src="/js/plugins/footable/footable.all.min.js"></script>
<script type="text/javascript">
    new Vue({
        el : '#app',
        data : {
            search : {
                email : '',
                mobile : '',
                is_ban : ''
            },
            pagination : {
                cur : 1,
                total : 1,
                pages : 1,
                page : 1,
                size : 60
            },
            items : []
        },
        computed : function () {

        },
        mounted : function () {
            this.onInit();
        },
        methods : {
            onInit : function () {
                var $this = this;
                this.$http.post('/manager/list/data', {})
                    .then(function (json) {
                        var result = json.body;
                        if (result.code == 200){
                            $this.items = result.data.lists;

                        } else if (result.code == 300) {

                        }
                    })
            },

            onChange : function () {
                var $this = this;
                this.$http.post('/manager/list/data', {search : $this.search, pagination : $this.pagination})
                    .then(function (json) {
                    var result = json.body;
                    if (result.code == 200){
                        $this.items = result.data.lists;

                    } else if (result.code == 300) {

                    }
                })
            },

            onRequest : function(search) {
                var $this = this;
                this.$http.post($this.url.data, {
                    search : $this.search,
                    pagination : $this.pagination,
                    sort : $this.sort
                })
                    .then(function (json) {
                        var result = json.body;
                        if (result.code == 200){
                            $this.items = result.data.lists;
                            $this.pagination.total = result.data.total;

                        } else if (result.code == 300) {

                        }
                    })
            },


            onPrev  : function () {
                if (this.cur > 1)
                this.onPage(this.pagination.page -1);
                return false;
            },
            onNext  : function () {
                if (this.cur < this.pages)
                this.onPage(this.pagination.page +1);
                return false;
            },
            onFirst : function () {
                if (this.cur >1)
                this.onPage(1);
                return false;
            },
            onLast  : function () {
                if (this.cur < this.pages)
                this.onPage(this.pagination.pages);
                return false;
            },
            onPage  : function (page) {
                var $this = this;
                $this.pagination.page = page;

                if($this.pagination.page > $this.pagination.pages) {
                    $this.pagination.page = $this.pagination.pages;
                } else if (page < 1) {
                    $this.pagination.page = 1;
                }

                $this.pagination.cur = $this.pagination.page;

                $this.onRequest();
            },

            onBan : function (id) {
                var $this = this;
                this.$http.post('/manager/ban', {id : id})
                    .then(function (res) {
                        if (res.body.code == 200) {
                            $this.onInit();
                        }
                    });
            },

            onEdit : function (id) {
                console.log(id);
            }
        },


    });
</script>

